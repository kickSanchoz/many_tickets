<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.manytickets">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/theaters"
        android:label="@string/app_name"
        android:roundIcon="@drawable/theaters"
        android:supportsRtl="true"
        android:theme="@style/AppThemeNoActionBar">
        <activity android:name=".ActorsOrDirectorsPackage.AddOrRemovePerson" />
        <activity android:name=".Reviews.Reviews" />
        <activity android:name=".TheaterPackage.SpecificTheater" />
        <activity android:name=".ActorsOrDirectorsPackage.AllActorsOrDirectors" />
        <activity android:name=".ActorsOrDirectorsPackage.SpecificActorOrDirector" />
        <activity android:name=".MoviesPackage.SpecificMovie" />
        <activity android:name=".MoviesPackage.AllMovies" />
        <activity android:name=".SecondActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>